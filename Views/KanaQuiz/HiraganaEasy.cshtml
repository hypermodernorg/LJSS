@model IEnumerable<LJSS.Models.KanaQuiz>


@{
    ViewData["Title"] = "Hiragana Kana Quiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>KANA QUIZ - HIRAGANA</h4>

<div class="row">
    <div class="col">
        <div class="jumbotron">

        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <fieldset class="form-group">
            <legend>Radio buttons</legend>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                    Option one is this and that—be sure to include why it's great
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="option2">
                    Option two can be something else and selecting it will deselect option one
                </label>
            </div>
            <div class="form-check disabled">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="option3" disabled="">
                    Option three is disabled
                </label>
            </div>
        </fieldset>
    </div>
</div>

<div class="row m-0">
    <p>* Disclaimer - The translator above uses google translate. Because of the vast differences between English and Japanese, and because of the complexities of the Japanese system, Google translations of Japanese my not be accurate, and in some cases, far from accurate.</p>
</div>
